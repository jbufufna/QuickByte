<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.quickbyte.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.quickbyte.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.quickbyte.UI.SplashScreenFragment"
        android:label="splash_screen"
        tools:layout="@layout/splash_screen" />
    <fragment
        android:id="@+id/customerAccountInformationFragment"
        android:name="com.example.quickbyte.CustomerAccountInformationFragment"
        android:label="fragment_customer_account_information"
        tools:layout="@layout/fragment_customer_account_information" />
    <fragment
        android:id="@+id/customerCreateAccountFragment"
        android:name="com.example.quickbyte.CustomerCreateAccountFragment"
        android:label="fragment_customer_create_account"
        tools:layout="@layout/fragment_customer_create_account" />
</navigation>